@model IEnumerable<Shop.Models.SpaceShips.SpaceShipsIndexViewModel>
<div>
    <a asp-action="create" asp-controller="spaceships" type="submit" class="btn btn-primary">Create</a>
</div>
<div class="h1">
    SpaceShips
</div>
<form action="/" method="post">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Nr</th>
                <th scope="col">Name</th>
                <th scope="col">Type</th>
                <th scope="col">Build Data</th>
                <th scope="col">Crew</th>
                <th score="col">Update</th>
                <th score="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @{
                int index = 1;
            }
            @foreach (var spaceships in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@spaceships.Name</td>
                    <td>@spaceships.TypeName</td>
                    <td>@spaceships.BuiltDate</td>
                    <td>@spaceships.Crew</td>
                    <td>
                        <a asp-action="update" asp-controller="spaceships" asp-route-id="@spaceships.Id" class="btn btn-outline-primary">Update</a>
                    </td>
                    <td>
                        <a asp-action="delete" asp-controller="spaceships" asp-route-id="@spaceships.Id" class="btn btn-outline-danger">Delete</a>
                    </td>
                </tr>
                index++;
            }
        </tbody>
    </table>
</form>